<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".VideoCallModule.Activites.CommingVideoCall">

    <TextView
            android:layout_width="wrap_content"
            android:text="incoming Call..."
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            app:riv_corner_radius="200dp"
            android:scaleType="fitXY"
            app:riv_border_color="@color/white"
            app:riv_border_width="3dp"
            android:id="@+id/callerPhoto"
            android:layout_height="200dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:text="Taha Elhosseny"
            android:id="@+id/callerName"
            android:layout_below="@+id/callerPhoto"
            android:layout_height="wrap_content"/>


    <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/callerTitle"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:text="Project Manager"
            android:layout_below="@+id/callerName"
            android:layout_height="wrap_content"/>


    <ImageView
            android:layout_width="70dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:onClick="answer"
            android:src="@drawable/ic_telephone"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/callerTitle"
            android:layout_height="70dp"/>

    <ImageView
            android:layout_width="70dp"
            android:padding="10dp"
            android:onClick="cancel"
            android:src="@drawable/ic_cancelcall"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/callerTitle"
            android:layout_height="70dp"/>


</RelativeLayout>